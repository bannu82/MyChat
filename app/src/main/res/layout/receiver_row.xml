<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:paddingRight="50dp"
    android:gravity="start"

    android:id="@+id/mainMessageLayout"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="30dp"
        android:id="@+id/RL"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:gravity="start"
        android:background="@drawable/receiver_msg_shape">



        <TextView

            android:id="@+id/message"
            android:text="Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="#1f2c34"
            />

        <ImageView
            android:id="@+id/messageImg"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/image"
            android:visibility="visible"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_gravity="end"
            android:background="#1f2c34"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="end"
                android:layout_marginStart="0dp"
                android:background="#1f2c34"
                android:gravity="center"
                android:text="12:00 AM"
                android:textColor="#A9A9A9"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/delivered"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/timestamp"
                android:background="#1f2c34"
                android:src="@drawable/seen_grey"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/seen"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/timestamp"
                android:background="#1f2c34"
                android:src="@drawable/seen_blue"
                android:visibility="gone" />



<!--            <TextView-->
<!--                android:id="@+id/txtSeen"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Seen"-->
<!--                android:textSize="12sp"-->
<!--                android:textColor="#D1D1CD"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_toRightOf="@+id/timestamp"-->
<!--                android:background="#1f2c34"-->
<!--                android:visibility="visible"-->

<!--                />-->
            <ImageView
                android:id="@+id/sent"

                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/timestamp"
                android:background="#1f2c34"
                android:padding="2dp"
                android:src="@drawable/single_tick"
                android:visibility="gone" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>