<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#111b21"
    >
    <TextView
        android:id="@+id/Del_msg_txt"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"

        android:layout_alignParentTop="true"
        android:text="Delete Messages ?"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Del_msg_txt"
        >
        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="Cancel"
            android:textSize="13dp"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_shape"
            />
        <TextView
            android:id="@+id/delete_for_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="Delete for me "
            android:textSize="13dp"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_shape"
            />

        <TextView
            android:id="@+id/delete_for_everyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Detete for everyone"
        android:textSize="13dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:background="@drawable/btn_shape"
        />

    </LinearLayout>





</RelativeLayout>